@model BilliardsManagement.Models.ViewModels.TableInfoViewModel
@{
    ViewData["Title"] = "Thông tin bàn";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Thông tin bàn @Model.TableName
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Thông tin cơ bản</h6>
                            <div class="mb-3">
                                <label class="small text-muted">Tên bàn:</label>
                                <p class="mb-0 fw-bold">@Model.TableName</p>
                            </div>
                            <div class="mb-3">
                                <label class="small text-muted">Loại bàn:</label>
                                <p class="mb-0">
                                    <span class="badge @(Model.TableType?.ToUpper() == "VIP" ? "bg-warning" : "bg-secondary")">
                                        @(Model.TableType?.ToUpper() == "VIP" ? "VIP" : "Tiêu chuẩn")
                                    </span>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="small text-muted">Giá/giờ:</label>
                                <p class="mb-0 fw-bold">@(Model.PricePerHour?.ToString("N0")) đ</p>
                            </div>
                            <div class="mb-3">
                                <label class="small text-muted">Trạng thái:</label>
                                <p class="mb-0">
                                    <span class="badge @(Model.Status == "AVAILABLE" ? "bg-success" : Model.Status == "IN_USE" ? "bg-danger" : "bg-warning")">
                                        @(Model.Status == "AVAILABLE" ? "Trống" : 
                                          Model.Status == "IN_USE" ? "Đang chơi" : 
                                          Model.Status == "BOOKED" ? "Đã đặt" : "Không xác định")
                                    </span>
                                </p>
                            </div>
                        </div>
                        
                        @if (Model.Status == "IN_USE")
                        {
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Thông tin phiên</h6>
                                <div class="mb-3">
                                    <label class="small text-muted">Bắt đầu:</label>
                                    <p class="mb-0 fw-bold">@Model.StartTime?.ToString("HH:mm")</p>
                                </div>
                                <div class="mb-3">
                                    <label class="small text-muted">Thời gian chơi:</label>
                                    <p class="mb-0 fw-bold" id="playTime">
                                        @{
                                            var duration = DateTime.Now - Model.StartTime;
                                            @($"{(duration?.Hours > 0 ? $"{duration?.Hours}h " : "")}{duration?.Minutes}m")
                                        }
                                    </p>
                                </div>
                                <div class="mb-3">
                                    <label class="small text-muted">Tạm tính bàn:</label>
                                    <p class="mb-0 fw-bold" id="tableTotal">@(Model.TableTotal?.ToString("N0") ?? "0") đ</p>
                                </div>
                            </div>

                            <div class="col-12 mt-4">
                                <h6 class="text-muted mb-3">Dịch vụ đã gọi</h6>
                                <div class="table-responsive">
                                    <table class="table" id="orderTable">
                                        <thead>
                                            <tr>
                                                <th>Sản phẩm</th>
                                                <th>Số lượng</th>
                                                <th>Đơn giá</th>
                                                <th>Thành tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody id="orderTableBody">
                                            @if (Model.Orders?.SelectMany(o => o.OrderDetails).Any() == true)
                                            {
                                                @foreach (var order in Model.Orders)
                                                {
                                                    foreach (var detail in order.OrderDetails)
                                                    {
                                                        <tr>
                                                            <td>@detail.Product?.ProductName</td>
                                                            <td>@detail.Quantity</td>
                                                            <td class="text-end">@(detail.UnitPrice?.ToString("N0")) đ</td>
                                                            <td class="text-end order-total">@((detail.UnitPrice * detail.Quantity)?.ToString("N0")) đ</td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="3" class="text-end fw-bold">Tổng dịch vụ:</td>
                                                <td class="text-end fw-bold" id="orderTotalAmount">
                                                    @(Model.Orders?.SelectMany(o => o.OrderDetails)
                                                        .Sum(od => (od.UnitPrice ?? 0) * (od.Quantity ?? 0))
                                                        .ToString("N0")) đ
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                            <div class="col-12 mt-4">
                                <div class="mt-4">
                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                                        <i class="bi bi-plus-circle me-2"></i>
                                        Thêm dịch vụ
                                    </button>

                                    <form asp-action="GenerateInvoice" method="post" class="d-inline">
                                        <input type="hidden" name="sessionId" value="@Model.SessionId" />
                                        <button type="submit" class="btn btn-primary ms-2">
                                            <i class="bi bi-receipt me-2"></i>
                                            Xuất hóa đơn (@(Model.TotalAmount?.ToString("N0") ?? "0") đ)
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                        else if (Model.Status == "AVAILABLE")
                        {
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Bắt đầu phiên mới</h6>
                                <form asp-action="StartSession" method="post" class="mt-3">
                                    <input type="hidden" name="tableId" value="@Model.TableId" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-play-fill me-2"></i>
                                        Bắt đầu
                                    </button>
                                </form>
                            </div>
                        }
                    </div>

                    <div class="text-end mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm dịch vụ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addOrderForm" method="post" asp-action="AddOrder">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="sessionId" value="@Model.SessionId" />
                    
                    <div class="mb-3">
                        <label class="form-label">Sản phẩm</label>
                        <select name="productId" class="form-select" required>
                            <option value="">Chọn sản phẩm...</option>
                            @foreach (var product in Model.AvailableProducts)
                            {
                                <option value="@product.ProductId" 
                                        data-price="@product.Price">
                                    @product.ProductName - @(product.Price?.ToString("N0"))đ
                                </option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số lượng</label>
                        <input type="number" name="quantity" class="form-control" required min="1" value="1" />
                    </div>

                    <!-- Preview section -->
                    <div id="productPreview" class="mt-3"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/serving.js"></script>
    <script>
        // Update play time and table total every minute
        @if (Model.Status == "IN_USE")
        {
            <text>
            function updateTableInfo() {
                const startTime = new Date('@Model.StartTime?.ToString("yyyy-MM-ddTHH:mm:ss")');
                const now = new Date();
                const diff = Math.floor((now - startTime) / 1000 / 60); // diff in minutes
                const hours = Math.floor(diff / 60);
                const minutes = diff % 60;
                
                // Update play time
                document.getElementById('playTime').textContent = 
                    `${hours > 0 ? hours + 'h ' : ''}${minutes}m`;
                
                // Update table total
                const pricePerHour = @Html.Raw(Model.PricePerHour?.ToString() ?? "0");
                const tableTotal = (diff / 60) * pricePerHour;
                document.getElementById('tableTotal').textContent = 
                    `${tableTotal.toLocaleString('vi-VN')} đ`;
            }

            setInterval(updateTableInfo, 60000); // Update every minute
            </text>
        }
    </script>
}
