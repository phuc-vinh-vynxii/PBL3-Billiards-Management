@{
    var userRole = Context.Session.GetString("Role")?.ToUpper() ?? "";
    var fullName = Context.Session.GetString("FullName") ?? "User";
    var roleDisplay = userRole switch
    {
        "MANAGER" => "Quản lý",
        "CASHIER" => "Thu ngân",
        "SERVING" => "Phục vụ",
        _ => userRole
    };
}

<header class="custom-header">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Quản lý quán Billiards</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (userRole == "MANAGER")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Manager" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Manager" asp-action="Tables">Bàn</a>
                        </li>
                    }
                    else if (userRole == "CASHIER")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cashier" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cashier" asp-action="Tables">Bàn</a>
                        </li>
                    }
                    else if (userRole == "SERVING")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Serving" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Serving" asp-action="Tables">Bàn</a>
                        </li>
                    }
                </ul>

                <div class="dropdown">
                    <button class="btn dropdown-toggle user-profile" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-2"></i>@fullName (@roleDisplay)
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>