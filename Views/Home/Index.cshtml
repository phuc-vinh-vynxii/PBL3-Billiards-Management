@{
    ViewData["Title"] = "Trang chủ";
    Layout = "_EmptyLayout";
}

@section Styles {
    <style>
        body {
            background: url("../images/billiards-background.jpg") no-repeat center center fixed !important;
            background-size: cover !important;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .welcome-card {
            background-color: rgba(15, 98, 34, 0.85);
            border-radius: 15px;
            padding: 2.5rem;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .btn-custom {
            background-color: white;
            color: #0F6222;
            border: 2px solid transparent;
            padding: 12px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 1rem;
        }

        .btn-custom:hover {
            background-color: transparent;
            color: white;
            border: 2px solid white;
            transform: translateY(-2px);
        }

        .logo-text {
            font-size: 2.8rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .subtitle {
            font-size: 1.3rem;
            margin-bottom: 2.5rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            opacity: 0.9;
        }
    </style>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center welcome-card">
                <div class="logo-text">
                    <i class="bi bi-grid-3x3-gap-fill me-2"></i>
                    Billiards Management
                </div>
                <p class="subtitle">
                    Hệ thống quản lý quán Billiards chuyên nghiệp
                </p>
                <div class="d-grid gap-3">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-custom">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-custom">
                        <i class="bi bi-person-plus me-2"></i>Đăng ký
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>